(5) print :- diamond pattern
   *
  ***
 *****
*******
 *****
  ***
   *
import java.util.*;


class main {
   public static void main(String args[]) {
       Scanner sc = new Scanner(System.in);
       // taking input so we can print as big/small structure we want
       int n = 4;


       //upper half
       for (int i=1; i<=n; i++){
           //spaces
           for (int j=1;j <=n-i; j++ ){
               System.out.print(" ");
           }
           //stars
           for (int j =1; j<= 2 * i-1; j++){
               System.out.print("*");
           }
           System.out.println();
       }
       //lower half
       for (int i=n; i>=1; i--){
           //spaces
           for (int j=1;j <=n-i; j++ ){
               System.out.print(" ");
           }
           //stars
           for (int j =1; j<= 2 * i-1; j++){
               System.out.print("*");
           }
           System.out.println();
       }
   }
}
