(2) print :- solid rhombus
    *****
   ***** 
  *****   
 *****   
*****

import java.util.*;
class main {
   public static void main(String args[]) {
       Scanner sc = new Scanner(System.in);
       //taking input so we can print as big/small structure we want
       int n = 5;


       for (int i =1; i<=n; i++){
           //spaces
           for (int j =1; j<=n-i; j++) {
               System.out.print(" ");
           }


           //stars
           for (int j=1; j<=5; j++){
               System.out.print("*");
           }
           System.out.println();
       }
   }
}
