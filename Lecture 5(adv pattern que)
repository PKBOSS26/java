(4) print :- palindromic pyramid
    1
   212
  32123
 4321234
543212345

import java.util.*;


class main {
   public static void main(String args[]) {
       Scanner sc = new Scanner(System.in);
       // taking input so we can print as big/small structure we want
       int n = 5;


       for (int i = 1; i <= n; i++) {
           // spaces
           for (int j = 1; j <= n - i; j++) {
               System.out.print(" ");
           }
           // 1st half numbers
           for (int j = i; j >= 1; j--) {
               System.out.print(j);
           }
           // 2nd half
           for (int j = 2; j <= i; j++) {
               System.out.print(j);
           }
           System.out.println();
       }
   }
}
