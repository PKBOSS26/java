(1) print :- Butterfly Pattern
*        *
**     **
***  ***
********
********
***  ***
**    **
*      *

import java.util.*;
class main {
   public static void main(String args[]) {
       Scanner sc = new Scanner(System.in);
       //taking input so we can print as big/small structure we want
       int n = 5;


       //upper half
       for (int i = 1; i <= n; i++) {
           //1st part
           for (int j = 1; j <= i; j++) {
               System.out.print("*");
           }
           //spaces
           int spaces = 2 * (n - i);
           for (int j = 1; j <= spaces; j++) {
               System.out.print(" ");
           }


           //2nd part
           for (int j = 1; j <= i; j++) {
               System.out.print("*");
           }
           System.out.println();
       }//upper half code done now it's time for lower half


       //lower half
       for (int i = n; i >= 1; i--) {
           //1st part
           for (int j = 1; j <= i; j++) {
               System.out.print("*");
           }
           //spaces
           int spaces = 2 * (n - i);
           for (int j = 1; j <= spaces; j++) {
               System.out.print(" ");
           }


           //2nd part
           for (int j = 1; j <= i; j++) {
               System.out.print("*");
           }
           System.out.println();
       }
   }
}
